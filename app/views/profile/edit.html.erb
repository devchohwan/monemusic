<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6 text-center">비밀번호 변경</h2>
  
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
    <p class="text-sm text-blue-800">
      <strong>회원 정보</strong><br>
      이름: <%= current_user.name %><br>
      아이디: <%= current_user.username %><br>
      담당: <%= current_user.teacher %>
    </p>
  </div>
  
  <%= form_with url: update_password_path, method: :patch, local: true, data: { turbo: false }, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :current_password, "현재 비밀번호", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :current_password, required: true, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    
    <hr class="my-4">
    
    <div>
      <%= f.label :password, "새 비밀번호", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password, required: true, minlength: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
      <p class="text-xs text-gray-500 mt-1">최소 6자 이상</p>
    </div>
    
    <div>
      <%= f.label :password_confirmation, "새 비밀번호 확인", class: "block text-sm font-medium mb-1" %>
      <%= f.password_field :password_confirmation, required: true, minlength: 6, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    
    <div>
      <%= f.submit "비밀번호 변경", class: "w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 cursor-pointer" %>
    </div>
  <% end %>
  
  <div class="mt-6">
    <%= link_to "← 홈으로 돌아가기", root_path, class: "text-gray-600 text-sm inline-flex items-center hover:text-gray-800" %>
  </div>
</div>